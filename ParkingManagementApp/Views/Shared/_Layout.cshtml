<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Parking Lot Management</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ParkingManagementApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow p-0 m-0">
            <div class="container-fluid p-0 m-0">
                <a class="navbar-brand p-0 m-0 font-weight-bold" asp-area="" asp-controller="Home" asp-action="Index">Parking Lot Management</a>
            </div>
        </nav>
    </header>
    <div class="container p-0">
        @RenderBody()
    </div>
    <footer class="border-top footer text-muted p-0 m-0">
        © No Copyright, No Right Reserved <a asp-area="" asp-controller="Home"></a>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
